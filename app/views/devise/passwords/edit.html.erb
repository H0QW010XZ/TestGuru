<h2 class="white"><%= t('.header') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, t('.new_password'), class: "white" %><br />
    <% if @minimum_password_length %>
      <em class="white">(<%= @minimum_password_length %> <%= t('devise.minimum_password')%>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "#{t('devise.password_placeholder')}" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t('devise.password_confirmation_label'), class: "white" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "#{t('devise.password_placeholder')}" %>
  </div>

  <div class="actions">
    <%= f.submit t('.change'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
