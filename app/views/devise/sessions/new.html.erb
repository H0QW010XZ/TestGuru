<div class="row justify-content-center">
  <div class="col col-md-4'">
    <h2 class="white"><%= t('.header') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, t('devise.email_label'), class: "white" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "#{t('devise.email_placeholder')}" %>
        <small id="emailHelp" class="form-text text-muted"><%= t('devise.email_helper') %></small>
      </div>

      <div class="form-group">
        <%= f.label :password, t('devise.password_label'), class: "white" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "#{t('devise.password_placeholder')}" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group form-check">
          <%= f.label :remember_me, class: "form-check-label white" do %>
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= t('.remember_me') %>
        <% end %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t('.sign_in'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
