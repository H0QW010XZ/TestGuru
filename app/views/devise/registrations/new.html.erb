<div class="row justify-content-center">
  <div class="col col-md-4'">
    <h2 class="white"><%= t('.sign_up')%></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "shared/errors", resource: resource %>

      <div class="form-group">
        <%= f.label :email, t('devise.email_label'), class: "white" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "#{t('devise.email_placeholder')}" %>
      </div>

      <div class="form-group">
        <%= f.label :password, t('devise.password_label'), class: "white" %>
        <% if @minimum_password_length %>
        <em class="white">(<%= @minimum_password_length %> <%= t('devise.minimum_password')%>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "#{t('devise.password_placeholder')}" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t('devise.password_confirmation_label'), class: "white" %><br />
        <%= octicon 'check', class: 'text-success hide' %>
        <%= octicon 'alert', class: 'text-success hide' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "#{t('devise.password_placeholder')}" %>
      </div>

      <div class="actions">
        <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
